{
  "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2015","es2016","es2017","es2018","es2019","es2020"],
      "target": "es6",
      "outDir": "./dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}